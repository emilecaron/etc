  { "full_text" : " ≣ : ${mem} " , "color" : "C8C8C8" },
  { "full_text" : " CPU : ${cpu}%  " , "color" : "E5EFF0" },
  { "full_text" : " Temp : ${exec sensors | grep 'Core 0' | cut -c13-25| sed 's/[^0-9.]//g'} " , "color" : "E5EFF0" },
  { "full_text" : " ${time %H:%M:%S (%a %d %b) } " , "color" : "E5EFF0"},
  { "full_text" : " ${exec amixer get Master | grep off > /dev/null && echo "..furtif.." || echo  " ♪ : `amixer get Master | grep -o '[0-9]*\%'`"} " , "color" : "E5EFF0"},
  {"full_text": "${addr wlp2s0}"},
